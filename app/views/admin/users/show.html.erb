<div>
  <p>
    <b>Name:</b>
    <%= @user.name %>
  </p>

  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Role:</b>
    <%= @user.role.humanize %>
  </p>

  <p>
    <b>Orders</b>
    <ul>
      <% @user.orders.each do |order| %>
        <li><%= link_to order.id, order_path(order) %></li>
      <% end %>
    </ul>
  </p>
</div>

<%= link_to 'Edit', edit_admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
