<%= semantic_nested_form_for @product, :html => {:multipart => true} do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>

    <%= f.fields_for :images %>
    <%= f.link_to_add "Add an image", :images %>

    <%= f.input :price %>
  <% end %>
  <%= f.actions %>
<% end %>
