<%= render partial: 'shared/show_notice' %>

<div class="show">
  <p>
    <b>Title:</b>
    <%= @product.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @product.description %>
  </p>

  <p>
    <b>Image:</b>
    <%= image_tag @product.image.url %>
  </p>

  <p>
    <b>Price:</b>
    <%= @product.price %>
  </p>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
